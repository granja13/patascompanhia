{% extends "geral.twig" %}

{% block conteudo %}
<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h1 style="text-align: center;">Conta</h1>
        </div>
    </div>
</div>

<div class="profile-authentication-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="content">
                <div class="cad-body">
                    {% if error != "" %}
                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert" style="float: right;">
                                &times;
                            </a>
                            Dados Incorretos!
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="login-form">
                    <h2>Login</h2>
                    <form action="autenticacao.php" method="post">
                        <input type="hidden" name="acao" value="login">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                        <div class="row align-items-center">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6 remember-me-wrap">
                                <div class="form-check">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6 lost-your-password-wrap">
                                <a href="#" class="lost-your-password">Esqueceu-se da palavra-passe?</a>
                            </div>
                        </div>
                        <button type="submit">Entrar</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="register-form">
                    <h2>Registo</h2>
                    <div class="content">
                        <div class="cad-body">
                            {% if success != "" %}
                                <div class="alert alert-success">
                                    <a class="close" data-dismiss="alert" style="float: right;">
                                        &times;
                                    </a>
                                    Conta Criada com Sucesso!
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <form action="autenticacao.php" method="post">
                        <input type="hidden" name="acao" value="registrar">
                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" name="nome" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <button type="submit">Registar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
