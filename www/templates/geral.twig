// Substitui 'G-XXXXXXXXXX' pelo teu código do Google Analytics
const GA_ID = 'G-SKYCT732SG';

// Função para carregar o Google Analytics
function loadGoogleAnalytics() {
    let script = document.createElement('script');
    script.async = true;
    script.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
    document.head.appendChild(script);

    script.onload = function() {
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        window.gtag = gtag;
        gtag('js', new Date());
        gtag('config', GA_ID, { 'anonymize_ip': true }); // Respeita GDPR
    };
}

// Função para gerir cookies
function manageCookies() {
    if (localStorage.getItem("cookiesAccepted")) {
        loadGoogleAnalytics();
    } else {
        document.getElementById("cookie-banner").style.display = "block";
    }
}

// Aceitar cookies
function acceptCookies() {
    localStorage.setItem("cookiesAccepted", "true");
    document.getElementById("cookie-banner").style.display = "none";
    loadGoogleAnalytics();
}

// Mostrar banner de cookies
window.onload = manageCookies;

// Código HTML para o banner de cookies
document.write(`
    <div id="cookie-banner" style="position:fixed; bottom:10px; left:10px; right:10px; background:#000; color:#fff; padding:15px; text-align:center; display:none;">
        Este site usa cookies para melhorar a experiência. <a href="politica-de-privacidade.html" style="color:#FFD700;">Saiba mais</a>.
        <button onclick="acceptCookies()" style="margin-left:10px; padding:5px 10px; background:#FFD700; border:none; cursor:pointer;">Aceitar</button>
