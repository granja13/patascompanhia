<!DOCTYPE html>
<html class="no-js" xmlns="http://www.w3.org/1999/html">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Administração | {% block title %}Backoffice{% endblock %} » Patas & Companhia</title>

    {% block links %}
        <!--<link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">-->

        <link rel="stylesheet" href="{{ site_url }}plugins/fontawesome-free/css/all.min.css">
        <link rel="stylesheet" href="{{ site_url }}plugins/ionicons/css/ionicons.min.css">
        <link rel="stylesheet" href="{{ site_url }}plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
        <link rel="stylesheet" href="{{ site_url }}plugins/sweetalert2/sweetalert2.css">
        <link rel="stylesheet" href="{{ site_url }}plugins/toastr/toastr.min.css">
        <link rel="stylesheet" href="{{ site_url }}dist/css/adminlte.min.css">
        <link rel="stylesheet" href="{{ site_url }}plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
        <link rel="stylesheet" href="{{ site_url }}assets/css/custom.css">

    {% endblock %}

</head>

<body class="sidebar-mini layout-fixed" style="height: auto;">
<!-- Site wrapper -->
<div class="wrapper">

    {% include "include/navbar.twig" %}

    {% include "include/main_menu.twig" %}

    <div class="content-wrapper" style="min-height: 295px;">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                         <h1>{{titulo}}</h1>
                    </div>
                    <div class="col-sm-6">

                        <ol id="breadcrumb" class="breadcrumb float-sm-right">

                            <li class="breadcrumb-item text-uppercase {% if breadcrumbs.itens | length == 0 %}active{% endif %}">
                                <a href="index.php">Home</a>
                            </li>

                            {% for breadcrumb in breadcrumbs.itens %}
                                <li class="breadcrumb-item text-uppercase {% if loop.last %}active{% endif %}">
                                    {% if breadcrumb.url == null %}
                                        {{ breadcrumb.label }}
                                    {% else %}
                                        <a href="{{ breadcrumb.url }}">{{ breadcrumb.label }}</a>
                                    {% endif %}
                                </li>
                            {% endfor %}

                        </ol>

                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="container-fluid">
                {% block content %}{% endblock %}
            </div>
        </section>
    </div>
    <style>
.content-wrapper {
    flex-grow: 1;
    min-height: auto !important; /* Ajusta automaticamente conforme o conteúdo */
    padding-bottom: 0; /* Remove espaço extra no final */
}
.wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}


    </style>

    <footer class="main-footer">
        <strong>Copyright © {{ "now"|date("Y") }} <a href="http:{{ url }}">{{ site_nome }}</a>.</strong>
        Todos os direitos reservados.
        <div class="float-right d-none d-sm-inline-block">
            <b>Versão</b> 1.0
        </div>
    </footer>
    {% block footer %}{% endblock %}

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<button id="btnBackToTop" onclick="backToTop();" title="Ir para o topo">
    <i class="fa fa-arrow-up"></i>
</button>

<!-- scripts -->
{% block scripts %}
    <script type="text/javascript" src="{{ site_url }}plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="{{ site_url }}plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>

    <script type="text/javascript" src="{{ site_url }}plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="{{ site_url }}plugins/moment/moment.min.js"></script>
    <script type="text/javascript" src="{{ site_url }}plugins/sweetalert2/sweetalert2.min.js"></script>
    <script type="text/javascript" src="{{ site_url }}plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script type="text/javascript" src="{{ site_url }}plugins/toastr/toastr.min.js"></script>
    <script type="text/javascript" src="{{ site_url }}dist/js/adminlte.js"></script>
{% endblock %}

</body>
</html>