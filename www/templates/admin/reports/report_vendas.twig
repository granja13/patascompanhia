{% extends "template.twig" %}
{% block title %}{{ titulo }}{% endblock %}

{% block links %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ site_url }}plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="{{ site_url }}plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <div class="mb-3">
                    <button class="btn btn-primary" onclick="abrirModal()">Adicionar Novo Mês</button>
                </div>

                {% if success %}
                    <div class="alert alert-success" role="alert">
                        Mês adicionado com sucesso!
                    </div>
                {% endif %}

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                {% endif %}

                <table id="lista_vendas" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Mês</th>
                            <th>Total de Vendas</th>
                            <th class="no-sort">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

                <!-- Modal -->
                <div class="modal fade" id="modalMes" tabindex="-1" role="dialog">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">Adicionar Novo Mês</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>
                      <form id="formMes">
                          <div class="modal-body">
                              <label>Escolha o Mês:</label>
                              <input type="month" name="novo_mes" required class="form-control">
                          </div>
                          <div class="modal-footer">
                              <button type="submit" class="btn btn-primary">Criar Mês</button>
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                          </div>
                      </form>
                    </div>
                  </div>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ site_url }}plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="{{ site_url }}plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="{{ site_url }}plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="{{ site_url }}plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" src="{{ site_url }}assets/js/reports/report_vendas.js"></script>

    <script type="text/javascript">

    function abrirModal(){
        $('#modalMes').modal('show');
    }
    </script>
{% endblock %}
