            </div>
        </div>
    </div>

    <div class="brands-area pb-75">
        <div class="container">
            <div class="categories-slides owl-carousel owl-theme">
            {% for indice, marcas in anuncios_marca %}
                <div class="single-brands-box" style="width: 50%;">
                    <a href="shop-grid.html" class="d-block">
                        <img src="{{ site_url }}public/assets/imagens/anuncios/{{ marcas.img }}" alt="{{ marcas.nome }}">
                    </a>
                </div>
            {% endfor %}
            </div>

        </div>
    </div>

