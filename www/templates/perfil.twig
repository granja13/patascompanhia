{% extends "geral.twig" %}

{% block conteudo %}

<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h1 style="text-align: center;">Dados Pessoais</h1>
        </div>
    </div>
</div>

<div class="contact-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="contact-info">
                    <h3>Área de cliente</h3>
                    <ul>
                        {% if cliente_perms == 255 %}
                            <li><a href="../../../public/admin/index.php">Administração</a></li>
                        {% endif %}
                        <li><a href="perfil.php">Dados Pessoais</a></li>
                        <li><a href="morada.php">Adicione o Primeiro Endereço</a></li>
                        <li><a href="encomendas.php">Histórico Encomendas</a></li>
                        <li><a href="favoritos.php">Favoritos</a></li>
                        <li><a href="../app/controllers/sair.php">Sair</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="content">
                    <div class="cad-body">
                        {% if success != "" %}
                            <div class="alert alert-success">
                                <a class="close" data-dismiss="alert" style="float: right;">&times;</a>
                                Dados Alterados Com Sucesso!
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="contact-form">
                    {% for infos in dados %}
                        <form action="../app/controllers/perfil.php" method="post">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label>Nome</label>
                                        <input type="text" name="nome" class="form-control" id="nome" value="{{ infos.nome }}" required>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label>Apelido</label>
                                        <input type="text" name="apelido" class="form-control" id="apelido" value="{{ infos.apelido }}" required>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group mb-3">
                                        <label>Email</label>
                                        <input type="email" name="email" class="form-control" id="email" value="{{ infos.email }}" required>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="checkme" name="termos" required {% if infos.termos is not null %} checked {% endif %}>
                                        <label class="form-check-label" for="checkme">
                                            Tomei conhecimento e aceito os <a href="privacy-policy.html">Termos & Condições</a>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <button type="submit" class="default-btn"><span>Guardar</span></button>
                                </div>
                            </div>
                        </form>
                    {% endfor %}
                </div>
            </div>
        </div>
        <br>
    </div>
</div>

{% endblock %}
